<div id="wrapper">
    <!-- Sidebar -->
    <div id="sidebar-wrapper">
        <ul class="sidebar-nav" style="font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif; font-size:16px">
            <li class="sidebar-brand label-primary" style="padding-top:8px; font-size:20px;  font-weight:bold">
                <a href="#">
                    @ViewBag.Title
                </a>
            </li>
            <li class="btn-success" style="text-decoration:solid; font-weight:bold">
                @Html.ActionLink("Statistics", "Index", "AcademicUnit")
            </li>
            <li>
                @Html.ActionLink("Academic Sessions", "Index", "Sessions")
            </li>
            <li>
                @Html.ActionLink("Academic Semisters", "Index", "Semisters")
            </li>
            <li>
                @Html.ActionLink("Departments", "Index", "Departments")
            </li>
            <li>
                @Html.ActionLink("Student Registration", "Index", "Students")
            </li>
            <li>
                @Html.ActionLink("Online Applicants", "Index", "Applicants")
            </li>
        </ul>
    </div>
    <!-- /#sidebar-wrapper -->
    <!-- Page Content -->
    <div id="page-content-wrapper">
        <div class="container-fluid">
            <div class="row">
                <!--Icon to Show Menu on Small Devices-->
                <p>
                    <div class="hidden-lg hidden-md hidden-print">
                        <a href="#menu-toggle" class="btn btn-default" id="menu-toggle">
                            <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> Show/Hide
                        </a>
                    </div>
                </p>

                <!--TODO: My Content Here-->
                <div>
                    @(Html.EJ().Chart("container")
        .PrimaryXAxis(pr => pr.Title(tl => tl.Text("Year")).Range(ra => ra.Min(2005).Max(2012).Interval(1)))
        .PrimaryYAxis(pr => pr.Range(ra => ra.Max(12).Min(3).Interval(1)).Title(tl => tl.Text("Percentage")).LabelFormat("{value}%"))
        .CommonSeriesOptions(cr => cr.Type(SeriesType.Bar).EnableAnimation(true).Tooltip(tt => tt.Visible(true).Format("#series.name# <br/> #point.x# : #point.y#")).Marker(mr => mr.DataLabel(dt => dt.Visible(true).TextPosition(TextPosition.Top).HorizontalTextAlignment(Syncfusion.JavaScript.DataVisualization.TextAlignment.Near).Font(fn => fn.Size("13px").FontFamily("Segoe UI")))))
        .Series(sr =>
            {
                sr.Points(pt =>
                    {
                        pt.X("2006").Y(7.8).Add();
                        pt.X("2007").Y(7.2).Add();
                        pt.X("2008").Y(6.8).Add();
                        pt.X("2009").Y(10.7).Add();
                        pt.X("2010").Y(10.8).Add();
                        pt.X("2011").Y(9.8).Add();
                    }).Name("India").Add();
                sr.Points(pt =>
                {
                    pt.X("2006").Y(4.8).Add();
                    pt.X("2007").Y(4.6).Add();
                    pt.X("2008").Y(7.2).Add();
                    pt.X("2009").Y(9.3).Add();
                    pt.X("2010").Y(9.7).Add();
                    pt.X("2011").Y(9).Add();
                }).Name("US").Add();
            })
        .Load("loadTheme")
        .DisplayTextRendering("OndataLabel")
        .IsResponsive(true)
        .Title(t => t.Text("Unemployment rate (%)"))
        .Size(sz => sz.Height("600"))
        .Legend(lg => { lg.Visible(true).Position(LegendPosition.Right).Alignment(Syncfusion.JavaScript.DataVisualization.TextAlignment.Near); })
                    )
                </div>

               
                <!-- Footer -->
                <footer>
                    <div class="container body-content">
                        <hr />
                        <p style="font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif; font-size:16px">&copy; @DateTime.Now.Year - School of Hygiene Portal</p>
                    </div>
                </footer>
                <!-- /#Footer -->
            </div>

        </div>
        
    </div>
    <!-- /#page-content-wrapper -->

    

</div>

@section ScriptSection{
    <script>
        function OndataLabel(sender) {
            sender.data.location.x = sender.data.location.x + 20;
        }
        $("#controlarea").css("visibility", "visible");
    </script>
}
@section scripts{
    <!-- Menu Toggle Script -->
    <script>
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
    </script>
}