                        //col.Field("Department.DepartmentName").HeaderText("Department Name").Width(110).Priority(2).Add();
            }))*@
                </div>
            <!-- Footer -->
            <footer>
                <div class="container body-content">
                    <hr />
                    <p style="font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif; font-size:16px">&copy; @DateTime.Now.Year - School of Hygiene Portal</p>
                </div>
            </footer>
            <!-- /#Footer -->
           
        </div>
    </div>
    <!-- /#page-content-wrapper -->



</div>

@section scripts{
    <!-- DataTables -->
    <script src="~/Content/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Content/datatables/dataTables.bootstrap.min.js"></script>
    <script>
        $(function () {
            $("#mytable").DataTable();
      });
    </script>
